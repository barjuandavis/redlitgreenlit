<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

  <TextView
          android:layout_width="match_parent"
          android:layout_height="97dp" android:id="@+id/textView" android:layout_weight="1"
          android:text="@string/app_name" android:textAlignment="center" android:textSize="60sp"/>
  <Button
          android:id="@+id/create_game_room"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:onClick="createGameRoom"
          android:text="@string/create_room"
          style="@style/Widget.AppCompat.Button.Colored" android:baselineAligned="false"/>
  <Button
          android:id="@+id/join_room"
          android:layout_width="match_parent"
          android:layout_height="188dp"
          android:onClick="createGameRoom"
          android:text="@string/join_room"
          style="@style/Widget.AppCompat.Button.Colored" android:baselineAligned="false" android:layout_weight="1"/>
  <EditText
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="14dp"
          android:layout_weight="1" android:inputType="text"
          android:hint="@string/player_name"/>

</LinearLayout>